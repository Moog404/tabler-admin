{{ form_start(form) }}
<div class="row row-deck row-cards">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-muted-lt">
                <h4 class="card-title">Informations</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    {{ form_row(form.isOnline) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.name) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.title) }}
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-muted-lt">
                <h4 class="card-title">Caract√©ristiques</h4>
            </div>
            <div class="card-body">
                <div class="col-md-10 js-characteristic-wrapper"
                     data-prototype="{{ form_widget(form.characteristics.vars.prototype)|e('html_attr') }}"
                     data-index="{{ form.characteristics|length }}">
                    {% for characteristicField in form.characteristics %}
                        <div class="js-characteristic-item mb-4">
                            {{ form_errors(characteristicField) }}
                            <div class="mb-3">
                                {{ form_row(characteristicField.title) }}
                            </div>
                            <div class="mb3">
                                {{ form_row(characteristicField.content) }}
                            </div>
                            <div class="text-right">
                                <a href="#" class="js-remove-characteristic pull-right">
                                    <button class="btn btn-secondary">
                                        supprimer
                                    </button>
                                </a>
                            </div>
                        </div>
                        <hr>
                    {% endfor %}
                    <a href="#" class="js-characteristic-add p-3">
                        <button class="btn btn-secondary">
                            ajouter
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="mt-3">
        <button class="btn">{{ button_label|default('Save') }}</button>
    </div>
    {{ form_end(form) }}
</div>
