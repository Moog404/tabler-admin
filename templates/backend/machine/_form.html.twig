{{ form_start(form) }}
<div class="col-12">
    <div class="card">
        <div class="card-header bg-muted-lt">
            <h4 class="card-title">Informations</h4>
        </div>
        <div class="card-body">
            <div class="mb-3">
                {{ form_row(form.isOnline) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.name) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.title) }}
            </div>
        </div>
    </div>
</div>

{{ form_widget(form) }}
<div class="mt-3">
    <button class="btn">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
